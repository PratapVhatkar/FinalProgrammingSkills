<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#F5F5F5"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/commonviewdivider"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/testName"
                android:text="@string/tech"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalQuestion"
                android:paddingLeft="5dp"
                android:text="Total 50 Questions"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalAppear"
                android:paddingLeft="5dp"
                android:text="158 people have given this test"
                android:layout_alignParentBottom="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="left"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/testmode"
                android:paddingLeft="5dp"
                android:text=""
                android:layout_alignParentBottom="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="left"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:paddingLeft="5dp"
                android:text="3 JUNE 2015"
                android:layout_alignParentBottom="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_gravity="left"

                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/myPrimaryColor"
            android:paddingBottom="15dp"
            android:text="You have scored"/>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:textSize="45dp"
           android:paddingRight="0dp"
           android:id="@+id/scoreTextview"
           android:layout_alignParentBottom="true"
           android:textColor="@color/myPrimaryColor"
           android:text="83%"/>



    </RelativeLayout>

</LinearLayout>
